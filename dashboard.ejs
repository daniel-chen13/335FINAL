<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Dashboard</title>
</head>

<body>

    <div>
        <h1>Hello <%- nickname %>! Welcome to your Dashboard.</h1>
    </div>

    <div>
        <div class="split left">
            <h1>Hello <%- nickname %>! Welcome to your Dashboard.</h1>
            <div id="reminderList"></div>
            <div id="title">
                <h2>Reminder List:</h2>
            </div>

            <div id="items">

                <input type="text" id="newReminderInfo" placeholder="New reminder">
                <input type="button" value="Add" id="newReminderButton">

                <ul id="theList">
                    <%- reminderList %>
                </ul>

            </div>

        </div>
    </div>
    <div class="split right">
        <h2>Today's Random Headline:</h2>
        <div id = "headlines">
            <h2><%- headlineTitle %></h3>
            <br>
            <a href=<%- headlineLink %>>Read More</a>
        </div>
        <br>
        <h2>Today's NASA Picture of Space:</h2>
        <div id = "picture">
            <img src=<%- nasaURL %> alt="NASA Picture of the Day">
            <script>
                console.log('NASA URL:', '<%= nasaURL %>');
            </script>
        </div>
    </div>

    <script>
        window.onload = main;
        function main() {
            const newReminderButton = document.getElementById('newReminderButton');
            const newReminderInfo = document.getElementById('newReminderInfo');
            const itemsList = document.getElementById('items').querySelector('ul');
            newReminderButton.addEventListener('click', function () {
                const newReminderText = newReminderInfo.value;
                const newReminderElement = document.createElement('li');
                newReminderElement.innerHTML = newReminderText;
                itemsList.appendChild(newReminderElement);
                fetch('/dashboard', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ reminder: newReminderText })
                });
            });
        }
    </script>

</body>

</html>

<style>
    #title {
        margin-left: 20px;
        text-align: 50%;
    }

    #items {
        width: 93%;
        margin-left: 20px;
        height: 650px;
        border: 1px solid black;
        padding: 10px;
        margin: 10px;
        overflow: auto;
        display: inline-block;
    }

    #weather {
        width: 95%;
        margin-left: 20px;
        height: 300px;
        border: 1px solid black;
        margin-top: 20px;
        display: inline-block;
    }
    
    #picture {
        width: 95%;
        margin-left: 20px;
        height: 700px;
        border: 1px solid black;
        margin-top: 20px;
        display: inline-block;
    }

    h1 {
        margin-left: 20px;
    }

    .split {
    height: 100%;
    width: 50%;
    position: fixed;
    z-index: 1;
    top: 0;
    overflow-x: hidden;
    padding-top: 20px;
    }

    .left {
    left: 0;
    background-color: #9fd3c7;
    }

    .right {
    right: 0;
    background-color: #9fd3c7;
    }

    #picture img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        padding-bottom: 20px;
    }

</style>
